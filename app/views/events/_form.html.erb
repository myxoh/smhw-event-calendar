<%= form_for(Event.new(), remote: true) do |f| %>
    <%= f.label :start %>
    <%= f.date_field :start %> <br>

    <%= f.label :finish %>
    <%= f.date_field :finish %> <br>

    <%= f.label :title %>
    <%= f.text_field :title %> <br>

    <%= f.label :description %>
    <%= f.text_area :description %> <br>

    <input type="hidden" name="week" value="<%=@days[0]%>" >

    <%= f.submit "Create Event" %>
<% end %>